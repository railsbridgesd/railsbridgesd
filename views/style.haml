        %p
          = link_to "Peach", "https://www.bridgetroll.org/events/342", class: "btn btn-primary btn-peach"
          = link_to "Red", "https://www.bridgetroll.org/events/342", class: "btn btn-primary btn-red"
          = link_to "Purple", "https://www.bridgetroll.org/events/342", class: "btn btn-primary btn-purple"
